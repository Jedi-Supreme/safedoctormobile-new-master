<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bottom_button_pressed_state"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/bottom_button_focused_state"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/bottom_button_normal_state"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

</selector>