<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context="com.safedoctor.safedoctor.UI.Activities.DoctorProfile"
	tools:showIn="@layout/activity_doctor_profile">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<LinearLayout
			android:padding="@dimen/activity_horizontal_margin"
			android:id="@+id/doctor_basic_details"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
		>
			
			<ImageView
				android:id="@+id/profile_doctor_image_thumbnail"
				android:layout_width="120dp"
				android:layout_height="120dp"
				android:scaleType="centerCrop"
				android:background="@drawable/bg_circle"/>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:layout_gravity="center_vertical">
				
				<TextView
					android:id="@+id/profile_doctor_fullname"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="22sp"
					android:textStyle="bold"
					tools:text="Kwabena Berko"/>
				<TextView
					android:id="@+id/profile_doctor_job_title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="16sp"
					android:textColor="@color/textLightDarkColor"
					tools:text="Opthalmologist"/>
			
			</LinearLayout>
			
		</LinearLayout>
		
		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="@color/lightGrayColor"/>
		
		<TextView
			android:padding="@dimen/activity_horizontal_margin"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="15sp"
			android:textColor="@color/textDarkColor"
			android:text="Blah Blah"/>
	
	</LinearLayout>
</ScrollView>
