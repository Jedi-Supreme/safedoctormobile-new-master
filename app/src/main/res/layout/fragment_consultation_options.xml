<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5000"
    tools:context="com.safedoctor.safedoctor.UI.Fragment.ConsultationOptions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/select_consultation_bg"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#000"
            android:drawablePadding="-40dp"
            android:drawableLeft="@drawable/ic_message_black_36dp"
            android:drawableStart="@drawable/ic_message_black_36dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/btn_chat"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#000"
            android:drawablePadding="-40dp"
            android:drawableLeft="@drawable/ic_call_black_36dp"
            android:drawableStart="@drawable/ic_call_black_36dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/btn_call"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video Chat"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#000"
            android:drawablePadding="-40dp"
            android:drawableLeft="@drawable/ic_videocam_black_36dp"
            android:drawableStart="@drawable/ic_videocam_black_36dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/btn_video_chat"
            />

    </LinearLayout>

</RelativeLayout>
