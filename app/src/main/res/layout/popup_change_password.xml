<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="#fff"
        android:textSize="20sp"
        android:padding="5dp"
        android:background="@drawable/button_style_flat"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Old Password"
        android:textColor="#000"
        android:textSize="16sp"
        android:padding="5dp"
        android:id="@+id/lblinfo"
        />

    <EditText
        android:id="@+id/oldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edit_text_bg_grey"
        android:hint="old password"
        android:inputType="textPassword"
        android:padding="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter New Password"
        android:textColor="#000"
        android:textSize="16sp"
        android:padding="5dp"
        android:id="@+id/lblinfo2"
        />

    <EditText
        android:id="@+id/newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edit_text_bg_grey"
        android:hint="new password"
        android:inputType="textPassword"

        android:padding="15dp" />

    <EditText
        android:id="@+id/confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edit_text_bg_grey"
        android:hint="confirm password"

        android:inputType="textPassword"
        android:padding="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL"
            android:gravity="center"
            android:background="@drawable/button_style_negative"
            android:layout_margin="5dp"
            android:id="@+id/btncancelvalidate"
            android:padding="16dp"
            android:textColor="#000"
            android:clickable="true"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CONFIRM"
            android:background="@drawable/button_style_flat"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:id="@+id/btnconfirm"
            android:padding="16dp"
            android:gravity="center"
            android:clickable="true"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resend Code"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:id="@+id/btnresendcode"
            android:padding="16dp"
            android:gravity="center"
            android:clickable="true"
            android:visibility="gone"
            />


    </LinearLayout>
</LinearLayout>